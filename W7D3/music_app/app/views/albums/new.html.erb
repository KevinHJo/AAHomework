<h1>Add Album</h1>

<form action="<%= albums_url %>" method="POST">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>"/>
    <input type="hidden" name="album[band_id]" value="<%= @band_id %>">
    
    <div id="input_title">
        <label for="title">Title:</label>
        <input type="text" id="title" name="album[title]" value= <%= @album.title %>>
    </div>

    <div id="input_year">
        <label for="year">Year:</label>
        <input type="text" id="year" name="album[year]" value=<%= @album.year %>>
    </div>

    <div id="select_band">
        <label for="band">Band:</label>
        <select id="band" name="album[band_id]">
            <% @bands.each do |band| %>
                <% if @band_id.to_i == band.id%>
                    <option value="<%= band.id %>" selected><%= band.name %></option>
                <% else %>
                    <option value="<%= band.id %>"><%= band.name %></option>
                <% end %>
            <% end %>
        </select>
    </div>

    <div id="pick_live">
        <label for="live">Live</label>
        <input type="radio" id="live" name="album[live?]" value="true">
        
        <label for="studio">Studio</label>
        <input type="radio" id="studio" name="album[live?]" value="false">
    </div>

    <div>
        <input type="submit" value="Create Album"> 
    </div>

</form>